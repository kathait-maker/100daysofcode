//Q75: Add two matrices.

/*
Sample Test Cases:
Input 1:
2 2
1 2
3 4
2 2
5 6
7 8
Output 1:
6 8
10 12

*/


#include <stdio.h>

int main() {
    int rows1, cols1, rows2, cols2;

    // Reading dimensions of first matrix
    printf("Enter rows and columns of first matrix: ");
    scanf("%d %d", &rows1, &cols1);

    int matrix1[rows1][cols1];

    // Reading elements of first matrix
    printf("Enter elements of first matrix:\n");
    for(int i = 0; i < rows1; i++) {
        for(int j = 0; j < cols1; j++) {
            scanf("%d", &matrix1[i][j]);
        }
    }

    // Reading dimensions of second matrix
    printf("Enter rows and columns of second matrix: ");
    scanf("%d %d", &rows2, &cols2);

    // Check if addition is possible
    if(rows1 != rows2 || cols1 != cols2) {
        printf("Matrix addition not possible: Dimensions do not match.\n");
        return 0;
    }

    int matrix2[rows2][cols2];
    int result[rows1][cols1];

    // Reading elements of second matrix
    printf("Enter elements of second matrix:\n");
    for(int i = 0; i < rows2; i++) {
        for(int j = 0; j < cols2; j++) {
            scanf("%d", &matrix2[i][j]);
        }
    }

    // Adding the matrices
    for(int i = 0; i < rows1; i++) {
        for(int j = 0; j < cols1; j++) {
            result[i][j] = matrix1[i][j] + matrix2[i][j];
        }
    }

    // Printing the result matrix
    printf("Resultant Matrix after addition:\n");
    for(int i = 0; i < rows1; i++) {
        for(int j = 0; j < cols1; j++) {
            printf("%d ", result[i][j]);
        }
        printf("\n");
    }

    return 0;
}


//Q76: Check if a matrix is symmetric.

/*
Sample Test Cases:
Input 1:
2 2
1 2
2 1
Output 1:
True

Input 2:
2 2
1 0
2 1
Output 2:
False

*/


#include <stdio.h>

int main() {
    int rows, cols, isSymmetric = 1;
    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    // A symmetric matrix must be square
    if (rows != cols) {
        printf("False\n");
        return 0;
    }

    int matrix[rows][cols];

    // Reading the matrix
    printf("Enter the elements of the matrix:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    // Checking symmetry
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            if (matrix[i][j] != matrix[j][i]) {
                isSymmetric = 0;
                break;
            }
        }
        if (!isSymmetric)
            break;
    }

    // Printing result
    if (isSymmetric)
        printf("True\n");
    else
        printf("False\n");

    return 0;
}
