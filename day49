//Q97: Print the initials of a name.

/*
Sample Test Cases:
Input 1:
John Doe
Output 1:
J.D.

*/

#include <stdio.h>
#include <ctype.h>

int main() {
    char str[100];
    int i = 0;

    gets(str);

    // Print the first letter (initial)
    if (str[0] != ' ')
        printf("%c.", toupper(str[0]));

    // Check remaining characters for spaces → next initial
    for (i = 1; str[i] != '\0'; i++) {
        if (str[i] == ' ' && str[i + 1] != ' ' && str[i + 1] != '\0') {
            printf("%c.", toupper(str[i + 1]));
        }
    }

    return 0;
}


//Q98: Print initials of a name with the surname displayed in full.

/*
Sample Test Cases:
Input 1:
John David Doe
Output 1:
J.D. Doe

*/

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[100];
    char surname[50];
    int i, j, lastSpace = -1;

    gets(str);

    // Find last space → surname begins after it
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ') {
            lastSpace = i;
        }
    }

    // Extract surname
    j = 0;
    for (i = lastSpace + 1; str[i] != '\0'; i++) {
        surname[j++] = str[i];
    }
    surname[j] = '\0';

    // Print initials of earlier words
    if (str[0] != ' ')
        printf("%c.", toupper(str[0]));

    for (i = 1; i < lastSpace; i++) {
        if (str[i] == ' ' && str[i + 1] != ' ') {
            printf("%c.", toupper(str[i + 1]));
        }
    }

    // Print surname
    printf(" %s", surname);

    return 0;
}
