//Q91: Remove all vowels from a string.

/*
Sample Test Cases:
Input 1:
education
Output 1:
dctn

*/

#include <stdio.h>

int main() {
    char str[100], result[100];
    int i, j = 0;

    gets(str);  // Input string

    for(i = 0; str[i] != '\0'; i++) {
        char c = str[i];

        // Check if NOT a vowel
        if(c!='a' && c!='e' && c!='i' && c!='o' && c!='u' &&
           c!='A' && c!='E' && c!='I' && c!='O' && c!='U') {
            result[j++] = c;
        }
    }

    result[j] = '\0';  // Null terminate

    printf("%s", result);

    return 0;
}


//Q92: Find the first repeating lowercase alphabet in a string.

/*
Sample Test Cases:
Input 1:
stress
Output 1:
s

*/

#include <stdio.h>

int main() {
    char str[100];
    int freq[26] = {0};  // frequency array for 'a' to 'z'
    int i;

    gets(str);  // input string (lowercase expected)

    for(i = 0; str[i] != '\0'; i++) {
        int index = str[i] - 'a';   // map character to 0–25

        freq[index]++;              // increase count

        if(freq[index] == 2) {      // appears second time → repeating
            printf("%c", str[i]);
            return 0;
        }
    }

    printf("No repeating character");
    return 0;
}
